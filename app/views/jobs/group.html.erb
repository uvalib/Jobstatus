<p id="notice"><%= notice %></p>
<div class="container">

<table class="table table-bordered">
  <thead>
  <tr>
    <th>Name</th>
    <th>Status</th>
    <th>Duration</th>
    <th>Message</th>
    <th>Date</th>
    <th>Frequency</th>
  </tr>
  </thead>

  <tbody>

  <% unless @group_jobs.order("created_at DESC").first["created_at"] + @group_jobs.order("created_at DESC").first["frequency"]*3600 >= Time.now %>
    <p class="not_success"><b><%= @group_jobs.first["name"] %></b> is overdue.</p>
  <% end %>

  <% @group_jobs.each do |job| %>
      <tr class="<%=job.status=='success' ? 'table-success' : 'table-danger' %> ">
        <td><%= job.name %></td>
        <td><%= job.status %></td>
        <td><%= distance_of_time_in_words(job.duration,0) %></td>
        <td><%= job.message %></td>
        <td><%= job.created_at.strftime("%Y-%m-%d") %></td>
        <td><%= job.frequency %></td>
      </tr>
  <% end %>
  </tbody>
</table>
  <div class="pagination justify-content-end">
    <%= will_paginate @group_jobs, renderer: WillPaginate::ActionView::BootstrapLinkRenderer %>
  </div>
</div>

