<p id="notice"><%= notice %></p>

<h1>Jobs</h1>

<table>
  <thead>
  <tr>
    <th> Status</th>
    <th> Job Name</th>
    <th> Counts </th>
    <th colspan="3"></th>
  </tr>
  </thead>
  <tbody>
    <% @groups.count.each do |k,v|%>
      <% joblist = Job.where("name= ?", k).order("created_at DESC") %>
      <tr>
        <% if joblist.first["created_at"] + joblist.first["frequency"] >= Date.today  && joblist.collect {|x| x.status == "success"}.all? %>
            <td><%= "&#10003;".html_safe %></td>
        <% else %>
            <td><%= "&#10008;".html_safe %></td>
        <% end %>
        <td><%= link_to k, group_jobs_path(name: k) %></a></td>
        <td><%= v %></td>
      </tr>
    <% end %>
  </tbody>
</table>

